{
    "manifest_version": 3,
    "name": "Salat Time Notifier",
    "description": "Get notifications for salat times and reminders for preparation.",
    "version": "1.0",
    "permissions": [
      "alarms",
      "notifications",
      "background",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup_width": 600, 
      "default_popup_height": 600 
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  